@page "/login/{handler?}"
@model LoginModel
@{
    Layout = "Shared/Layouts/_AuthLayout";
    ViewData["Title"] = "ورود | ثبت نام";
}

<div class="site-logo">
    <a href="/">
        <img src="/assets/images/logo.png" alt="logo">
    </a>
</div>
<div class="auth-form-title border-0">
    @ViewData["Title"]
</div>
<form method="post" asp-page="Login" onsubmit="return submitFormWithAjaxAndReplaceElement(event, '#auth-form')">
    <div class="form-row-title mb-3">
        <h4 class="font-weight-normal fa-1x">لطفا شماره موبایل یا ایمیل خود را وارد کنید</h4>
    </div>
    @Html.EditorFor(m => m.EmailOrPhone)
    <div class="form-element-row text-left mt-4">
        <div class="loading">
            <div class="dot-flashing"></div>
        </div>
        <button class="btn-element btn-info-element w-100 btn-loading">
            ورود
        </button>
    </div>
</form>