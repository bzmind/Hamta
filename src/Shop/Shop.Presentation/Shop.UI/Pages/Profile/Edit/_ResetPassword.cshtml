@model Shop.API.ViewModels.Users.ResetUserPasswordViewModel
@{
    ViewData["Title"] = "تغییر رمز عبور";
}

<div class="section-title mb-2">@ViewData["Title"]</div>
<section class="shadow-around p-3 mt-2">
    <form asp-page-handler="ResetPassword">
        <div class="row">
            <div class="col-lg-12 mb-3">
                <div class="text-dark">
                    @Html.EditorFor(m => m.CurrentPassword)
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 mb-3">
                <div class="text-dark">
                    @Html.EditorFor(m => m.NewPassword)
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 mb-3">
                <div class="text-dark">
                    @Html.EditorFor(m => m.ConfirmNewPassword)
                </div>
            </div>
        </div>
        <div class="col-12 p-0">
            <div class="form-element-row text-right">
                <button class="btn-element btn-success-element">
                    <i class="fad fa-user-edit"></i>
                    ذخیره تغییرات
                </button>
            </div>
        </div>
    </form>
</section>