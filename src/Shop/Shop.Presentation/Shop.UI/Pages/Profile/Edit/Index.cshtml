@page "{handler?}"
@using Shop.API.ViewModels.Users
@model Shop.UI.Pages.Profile.Edit.IndexModel
@{
    ViewData["Title"] = "ویرایش اطلاعات";
}

<div class="container">
    <div class="row mb-5">
        <partial name="_ProfileSidebar" />
        <div class="col-lg-9 col-md-8">
            <div class="row mb-3">
                <div class="col-lg-6 pr-0">
                    <div class="section-title mb-2">
                        @ViewData["Title"]
                    </div>
                    <section class="shadow-around p-3">
                        <form method="post">
                            <div class="row">
                                <div class="col-lg-12 mb-3">
                                    <div class="text-dark">
                                        @Html.EditorFor(m => m.FullName)
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12 mb-3">
                                    <div class="text-dark">
                                        @Html.EditorFor(m => m.Email)
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12 mb-3">
                                    <div class="text-dark">
                                        @Html.EditorFor(m => m.PhoneNumber)
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-element-row text-right">
                                        <button class="btn-element btn-success-element">
                                            <i class="fad fa-user-edit"></i>
                                            ذخیره تغییرات
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </section>
                    <section class="shadow-around p-3 mt-3">
                        <div class="row align-items-center">
                            <div class="col-md-12 form-element-row position-relative widget widget-newsletter m-0">
                                @if (ViewData["IsSubscribedToNewsletter"].Equals(false)
                                     || ViewData["IsSubscribedToNewsletter"] == null)
                                {
                                    <partial name="_NotSubscribedToNewsletter"/>
                                }
                                else
                                {
                                    <partial name="_SubscribedToNewsletter"/>
                                }
                            </div>
                        </div>
                    </section>
                </div>
                <div class="col-lg-6 pr-0">
                    <partial name="_ResetPassword" model="new ResetUserPasswordViewModel()" />
                </div>
            </div>
        </div>
    </div>
</div>