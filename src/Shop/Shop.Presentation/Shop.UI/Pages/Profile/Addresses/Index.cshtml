@page "{handler?}"
@model Shop.UI.Pages.Profile.Addresses.IndexModel
@{
    ViewData["Title"] = "نشانی‌ها";
    var i = 1;
}

<div class="row mb-5">
    <partial name="Profile/_ProfileSidebar" />
    <div class="col-lg-9 col-md-8">
        <div class="section-title mb-2">
            @ViewData["Title"]
        </div>
        <div class="checkout-section shadow-around">
            <div class="checkout-section-content">
                <div class="row mx-0">
                    @foreach (var address in Model.Addresses)
                    {
                        <div class="col-xl-3 col-lg-4 col-sm-6">
                            <div class="custom-control custom-radio">
                                <input type="radio" id="@($"customRadio{i}")" name="customRadio"
                                   class="custom-control-input" checked="@(address.IsActive ? "checked" : null)">
                                <label class="custom-control-label address-select" for="@($"customRadio{i}")"
                                   onclick="activateAddress('@Url.Page("Index", "ActivateAddress", new { addressId = address.Id } )')">
                                    <span class="head-address-select">به این آدرس ارسال شود</span>
                                    <span>@address.FullAddress</span>
                                    <span>
                                        <i class="fa fa-user"></i>
                                        @address.FullName
                                    </span>
                                    <form method="post" asp-page-handler="RemoveAddress" id="remove-address-from">
                                        <input type="hidden" name="addressId" value="@address.Id" />
                                        <button class="remove-address-btn p-0"
                                            onclick="return confirm('آیا از حذف این آدرس اطمینان دارید؟')">
                                            حذف
                                            <i class="far fa-trash"></i>
                                        </button>
                                    </form>
                                    <a class="edit-address-btn"
                                   onclick="openModal('@Url.Page("Index", "ShowEditPage",
                                                           new { addressId = address.Id })', 'ویرایش آدرس')">
                                        ویرایش
                                        <i class="far fa-edit"></i>
                                    </a>
                                </label>
                            </div>
                        </div>
                        i++;
                    }
                    <div class="col-xl-3 col-lg-4 col-sm-6">
                        <div class="custom-control custom-radio">
                            <button class="add-address"
                                    onclick="openModal('@Url.Page("Index", "ShowAddPage")', 'آدرس جدید')">
                                <i class="fa fa-plus"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>