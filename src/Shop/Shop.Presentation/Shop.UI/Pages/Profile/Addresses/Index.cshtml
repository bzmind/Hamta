@page
@model Shop.UI.Pages.Profile.Addresses.IndexModel
@{
    ViewData["Title"] = "نشانی‌ها";
}

<div class="row mb-5">
    <partial name="Profile/_ProfileSidebar" />
    <div class="col-lg-9 col-md-8">
        <div class="section-title mb-2">
            @ViewData["Title"]
        </div>
        <div class="checkout-section shadow-around">
            <div class="checkout-section-content">
                <div class="row mx-0">
                    @foreach (var address in Model.Addresses)
                    {
                        <div class="col-xl-3 col-lg-4 col-sm-6 mb-3">
                            <div class="custom-control custom-radio">
                                <input type="radio" id="customRadio2" name="customRadio"
                                   class="custom-control-input" checked="@(address.IsActive ? "checked" : null)">
                                <label class="custom-control-label address-select" for="customRadio2">
                                    <span class="head-address-select">به این آدرس ارسال شود</span>
                                    <span>@address.FullAddress</span>
                                    <span>
                                        <i class="fa fa-user"></i>
                                        @address.FullName
                                    </span>
                                    <a href="#" class="link--with-border-bottom edit-address-btn"
                                   data-toggle="modal" data-target="#editAddressModal">
                                        ویرایش
                                        <i class="fa fa-edit"></i>
                                    </a>
                                </label>
                            </div>
                        </div>
                    }
                    <div class="col-xl-3 col-lg-4 col-sm-6 mb-3">
                        <div class="custom-control custom-radio">
                            <button class="add-address" data-toggle="modal"
                                    data-target="#addAddressModal">
                                <i class="fa fa-plus"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>