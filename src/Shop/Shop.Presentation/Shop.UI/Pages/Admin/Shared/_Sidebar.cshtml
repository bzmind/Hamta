@{
  var selected = ViewData["Selected"]?.ToString() ?? "";
}

<div class="main-menu menu-fixed menu-dark menu-accordion menu-shadow" data-scroll-to-active="true">
  <div class="navbar-header pl-1 pr-1">
    <ul class="nav navbar-nav flex-row">
      <li class="nav-item mr-auto">
        <a class="navbar-brand" href="/admin">
          <h2 class="brand-text mb-0 p-0">پنل ادمین</h2>
        </a>
      </li>
      <li class="nav-item nav-toggle">
        <a class="nav-link modern-nav-toggle pr-0" data-toggle="collapse">
          <i class="bx bx-x d-block d-xl-none font-medium-4 primary"></i>
          <i class="toggle-icon bx bx-disc font-medium-4 d-none d-xl-block primary" data-ticon="bx-disc"></i>
        </a>
      </li>
    </ul>
  </div>
  <div class="shadow-bottom"></div>
  <div class="main-menu-content">
    <ul class="navigation navigation-main" id="main-menu-navigation" data-menu="menu-navigation" data-icon-style="lines">
      <li class="nav-item @(selected == "index" ? "active" : null)">
        <a href="/admin">
          <i class="bx bx-home-alt"></i>
          <span class="menu-title">داشبورد</span>
        </a>
      </li>
      <li class="@(selected == "orders" ? "active" : null)">
        <a href="/admin/orders">
          <i class="bx bx-cart-alt"></i>
          <span class="menu-title">سفارشات</span>
        </a>
      </li>
      <li class="@(selected == "products" ? "active" : null)">
        <a href="/admin/products">
          <i class="bx bx-package"></i>
          <span class="menu-title">محصولات</span>
        </a>
      </li>
      <li class="@(selected == "categories" ? "active" : null)">
        <a href="/admin/categories">
          <i class="bx bx-collection"></i>
          <span class="menu-title">دسته‌بندی ها</span>
        </a>
      </li>
      <li class="nav-item @(selected == "users" ? "active" : null)">
        <a href="/admin/users">
          <i class="bx bx-group"></i>
          <span class="menu-title">کاربران</span>
        </a>
      </li>
      <li class="nav-item @(selected == "comments" ? "active" : null)">
        <a href="/admin/comments">
          <i class="bx bx-chat"></i>
          <span class="menu-title">نظرات</span>
        </a>
      </li>
      <li class="nav-item @(selected == "roles" ? "active" : null)">
        <a href="/admin/roles">
          <i class="bx bx-badge-check"></i>
          <span class="menu-title">نقش ها</span>
        </a>
      </li>
      <li class="nav-item @(selected == "avatars" ? "active" : null)">
        <a href="/admin/avatars">
          <i class="bx bx-face"></i>
          <span class="menu-title">آواتار ها</span>
        </a>
      </li>
      <li class="nav-item @(selected == "shippings" ? "active" : null)">
        <a href="/admin/shippings">
          <i class="bx bx-truck"></i>
          <span class="menu-title">روش‌های ارسال</span>
        </a>
      </li>
      <li class="nav-item @(selected == "banners" ? "active" : null)">
        <a href="/admin/banners">
          <i class="bx bxs-categories"></i>
          <span class="menu-title">بنر ها</span>
        </a>
      </li>
      <li class="nav-item @(selected == "sliders" ? "active" : null)">
        <a href="/admin/sliders">
          <i class="bx bxs-carousel"></i>
          <span class="menu-title">اسلایدر ها</span>
        </a>
      </li>
    </ul>
  </div>
</div>