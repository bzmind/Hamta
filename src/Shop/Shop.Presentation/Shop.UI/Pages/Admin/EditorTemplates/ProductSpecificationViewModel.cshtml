@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Shop.API.ViewModels.Products.ProductSpecificationViewModel
@{
}

<div data-repeater-item="">
  <div class="row justify-content-between align-items-center">
    <div class="col-11">
      <div class="row">
        <div class="col-3 pl-0">
          <input type="text" class="form-control" asp-for="@Model.Title"
                 placeholder="@Html.DisplayNameFor(m => m.Title)">
          <span asp-validation-for="@Model.Title"></span>
        </div>
        <div class="col-9 pl-0">
          <textarea type="text" class="form-control" asp-for="@Model.Description"
                    placeholder="@Html.DisplayNameFor(m => m.Description)"></textarea>
          <span asp-validation-for="@Model.Description"></span>
        </div>
      </div>
    </div>
    <div class="col-1 d-flex justify-content-center">
      <button class="btn-sm badge-pill bg-rgba-danger text-danger border-0" type="button"
              data-repeater-remove="">
        <i class="bx bx-trash"></i>
      </button>
    </div>
  </div>
  <hr>
</div>