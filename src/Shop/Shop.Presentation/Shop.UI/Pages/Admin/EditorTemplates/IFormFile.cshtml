@model Microsoft.AspNetCore.Http.IFormFile
@{
  var id = Guid.NewGuid();
}

<fieldset class="form-group">
  <label asp-for="@Model"></label>
  <div class="custom-file">
    <input type="file" class="custom-file-input" id="@id" asp-for="@Model">
    <span asp-validation-for="@Model"></span>
    <label class="custom-file-label" for="@id">انتخاب فایل</label>
  </div>
</fieldset>